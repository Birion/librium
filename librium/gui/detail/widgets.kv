#:kivy 1.10.1

<Book>:
    multiline: False
    padding: 10
    margin: 10
    size_hint_y: None
    height: 35

<SingleInput>:
    label: label_widget
    input: input_widget
    orientation: "horizontal"
    cols: 2
    size_hint_y: None
    height: self.minimum_height

    Label:
        id: label_widget
        text: root.title

    Book:
        id: input_widget

<MultiInput>:
    label: label_widget
    orientation: "vertical"
    spacing: 10
    cols: 1
    size_hint_y: None
    height: self.minimum_height

    Label:
        id: label_widget
        text: root.title