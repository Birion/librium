#:kivy 1.10.1

ScrollView:
    title: book_title
    isbn: book_isbn
    format: book_format
    page_count: book_pages
    price: book_price

    authors: book_authors
    publishers: book_publishers
    genres: book_genres
    languages: book_languages

    scroll_distance: 50

    LibriumLayout:
        cols: 1
        size_hint_y: None
        height: self.minimum_height

        padding: 20
        spacing: 20

        Label:
            id: testing

        SingleInput:
            title: "Title"
            id: book_title

        MultiInput:
            id: book_authors
            title: "Author(s)"

        MultiInput:
            id: book_publishers
            title: "Publisher(s)"

        SingleInput:
            title: "ISBN"
            id: book_isbn

        SingleInput:
            title: "Page count"
            id: book_pages

        SingleInput:
            title: "Price"
            id: book_price

        SingleInput:
            title: "Format"
            id: book_format

        MultiInput:
            id: book_genres
            title: "Genre(s)"

        MultiInput:
            id: book_languages
            title: "Language(s)"

        GridLayout:
            cols: 2

            Button:
                text: "Save"

            Button:
                text: "Reset"

<Label>:
    font_name: "Roboto"
    font_size: 20
    bold: True

<TextInput>:
    font_name: "Roboto"